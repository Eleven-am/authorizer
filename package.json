    "@nestjs/axios": "^4.0.0",
    "@simplewebauthn/server": "^13.1.0",
    "express-useragent": "^1.0.15",
    "openapi3-ts": "^4.4.0",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@nestjs/common": "^11.0.5",
    "@nestjs/core": "^11.0.5",
    "@simplewebauthn/types": "^12.0.0",
