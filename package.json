  "version": "0.0.44",
  "publishConfig": {
    "access": "public"
  },
  "author": "Roy OSSAI",
  "main": "./index.js",
  "types": "./index.d.ts",
  "license": "GPL-3.0",
  "scripts": {
    "build": "rimraf dist && tsc",
    "lint": "eslint --ext .ts src",
